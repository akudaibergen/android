<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shop.ShopFragment">

    <FrameLayout
        android:layout_above="@+id/bnv_shop"
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bnv_shop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:layout_alignParentBottom="true"
        android:id="@+id/bnv_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_countTextColor="#000"
        app:mbn_defaultIconColor="#1a3e66"
        app:mbn_rippleColor="#6200EE"
        app:mbn_selectedIconColor="#6200EE"
        app:mbn_shadowColor="#5000"/>


</RelativeLayout >